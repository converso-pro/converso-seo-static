{
  "outputDirectory": "deploy-output",
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, s-maxage=86400"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/biblioteca",
      "destination": "/biblioteca/index.html"
    },
    {
      "source": "/library",
      "destination": "/library/index.html"
    },
    {
      "source": "/libreria",
      "destination": "/libreria/index.html"
    }
  ],
  "redirects": [
    {
      "source": "/artigos/:slug",
      "destination": "/biblioteca/:slug",
      "permanent": true
    },
    {
      "source": "/articles/:slug",
      "destination": "/library/:slug",
      "permanent": true
    },
    {
      "source": "/articulos/:slug",
      "destination": "/libreria/:slug",
      "permanent": true
    },
    {
      "source": "/pt-BR/:path*",
      "destination": "/biblioteca/:path*",
      "permanent": true
    },
    {
      "source": "/en/:path*",
      "destination": "/library/:path*",
      "permanent": true
    },
    {
      "source": "/es/:path*",
      "destination": "/libreria/:path*",
      "permanent": true
    },
    {
      "source": "/pt-BR/como-abrir-barbearia-las-vegas",
      "destination": "/biblioteca/como-abrir-barbearia-las-vegas",
      "permanent": true
    },
    {
      "source": "/pt-BR/como-administrar-dinheiro-barbearia",
      "destination": "/biblioteca/como-administrar-dinheiro-barbearia",
      "permanent": true
    },
    {
      "source": "/pt-BR/como-captar-clientes-barbearia",
      "destination": "/biblioteca/como-captar-clientes-barbearia-2025",
      "permanent": true
    },
    {
      "source": "/pt-BR/melhor-aplicativo-barbearia",
      "destination": "/biblioteca/melhor-software-barbearia-las-vegas-2025",
      "permanent": true
    },
    {
      "source": "/melhor-plataforma-ecommerce",
      "destination": "/biblioteca/qual-melhor-plataforma-ecommerce-gratuita",
      "permanent": true
    },
    {
      "source": "/barbearias",
      "destination": "/biblioteca/barbearias",
      "permanent": true
    },
    {
      "source": "/barbershops",
      "destination": "/library/barbershops",
      "permanent": true
    },
    {
      "source": "/barberias",
      "destination": "/libreria/barberias",
      "permanent": true
    }
  ]
}